{% assign items = collections.generatedProducts | tagFilter: _tag %}
{%- for item in items %}
<a class="list-links" href="{{ site.url }}{{ site.baseurl }}{{ item.url | url }}">
  {% if item.data.images.size > 0 %}
    <img alt="Image de {{item.data.title}}" src="{{ site.url }}{{ site.baseurl }}{{ item.data.images[0] }}">
  {% endif %}
  <div>
    <h2>{{ item.data.title }}&nbsp; <b>- {{item.data.price}}â‚¬</b></h2><h3>{{item.data.conditions}}&nbsp; <u>&gt; Voir la fiche produit</u></h3>
  </div>
</a>
{% endfor -%}
