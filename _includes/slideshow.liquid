<script src="{{ site.url }}{{ site.baseurl }}/js/splide.min.js"></script>
<link rel="stylesheet" href="{{ site.url }}{{ site.baseurl }}/css/splide.min.css">

{% if images.size > 1 %}
<div class="splide slideshow">
	<div class="splide__track">
		<ul class="splide__list">
      {%- for item in images %}
      <li class="splide__slide">
        <img src="{{ site.url }}{{ site.baseurl }}{{ item | url }}" title="{{ title }} image {{forloop.index}}" alt="{{ title }} image {{forloop.index}}" />
      </li>
      {% endfor -%}
		</ul>
	</div>
</div>
<script>
  new Splide('.splide', {
    type     : 'loop',
    autoWidth: true,
    focus    : 'center',
  }).mount();
</script>

<style>
.splide, .splide__track, .splide__list, .splide__slide {
    width: inherit;
    height: inherit;
    min-height: inherit;
  }
</style>
{% else if images.size == 1 %}
  <img src="{{ site.url }}{{ site.baseurl }}{{ images[0] | url }}" title="{{title}} illustration" alt="{{title}} illustration" />
{% endif %}
